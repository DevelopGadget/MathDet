<?xml version="1.0" encoding="utf-8"?>
<android.widget.AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    tools:context="mathdet.mathgadget.com.mathdet.dos"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="6dp"
        android:layout_height="300dp"
        android:layout_alignRight="@+id/X4"
        android:layout_marginRight="64dp"
        android:layout_x="93dp"
        android:layout_y="140dp"
        app:srcCompat="@drawable/linea"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="129dp" />

    <EditText
        android:id="@+id/X1"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/btnResolver"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="64dp"
        android:layout_toStartOf="@+id/X2"
        android:layout_x="124dp"
        android:layout_y="168dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="number|numberSigned|numberDecimal"
        android:nextFocusRight="@+id/X2"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText
        android:id="@+id/X3"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/X2"
        android:layout_alignBottom="@+id/X2"
        android:layout_marginRight="64dp"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_x="123dp"
        android:layout_y="314dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="number|numberSigned|numberDecimal"
        android:nextFocusForward="@+id/X4"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/X4"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/imageView4"
        android:layout_x="250dp"
        android:layout_y="314dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:imeOptions="actionGo"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="277dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="6dp"
        android:layout_height="300dp"
        android:layout_alignBottom="@+id/X3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:layout_x="348dp"
        android:layout_y="137dp"
        app:srcCompat="@drawable/linea"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="129dp" />

    <Button
        android:id="@+id/btnResolver"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/textView"
        android:layout_x="122dp"
        android:layout_y="462dp"
        android:background="@drawable/pencil"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="410dp" />

    <EditText
        android:id="@+id/X2"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/X1"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="64dp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_x="252dp"
        android:layout_y="169dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="number|numberSigned|numberDecimal"
        android:nextFocusForward="@+id/X3"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="160dp" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/btnResolver"
        android:layout_alignStart="@+id/X1"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="64dp"
        android:layout_x="240dp"
        android:layout_y="463dp"
        android:background="@drawable/garbage"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="410dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginRight="64dp"
        android:layout_marginStart="24dp"
        android:layout_x="12dp"
        android:layout_y="268dp"
        android:text="A = "
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp" />
</android.widget.AbsoluteLayout>
